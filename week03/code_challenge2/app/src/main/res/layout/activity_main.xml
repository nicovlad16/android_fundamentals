<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/background1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/holo_orange_light" />

        <TextView
            android:id="@+id/background2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/background1"
            android:background="@android:color/white"
            android:paddingBottom="20dp" />

        <TextView
            android:id="@+id/background3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/background2"
            android:background="@android:color/holo_green_light" />

        <TextView
            android:id="@+id/background4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/background3"
            android:background="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/background5"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/background4"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/background6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/background5"
            android:background="@android:color/holo_red_light" />


        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/background1"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="@string/scroll_view" />

        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/textview1"
            android:paddingBottom="20dp"
            android:text="@string/scroll_view" />


        <TextView
            android:id="@+id/textview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview2"
            android:paddingBottom="20dp"
            android:text="@string/scroll_view" />


        <TextView
            android:id="@+id/textview4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview3"
            android:paddingBottom="20dp"
            android:text="@string/scroll_view" />


        <TextView
            android:id="@+id/textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview4"
            android:text="@string/scroll_view" />

    </RelativeLayout>


</ScrollView>